{
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AryanJ-NYC/btcpay-greenfield-node-client"
  },
  "keywords": [
    "btc",
    "btcpay",
    "btcpayserver",
    "bitcoin",
    "lightning"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "generate": "openapi -i https://docs.btcpayserver.org/API/Greenfield/v1/swagger.json -c node -o ./src --useUnionTypes --useOptions",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "btcpay-greenfield-node-client",
  "author": "Aryan Jabbari <AryanJabbari@gmail.com>",
  "module": "dist/btcpay-greenfield-node-client.esm.js",
  "size-limit": [
    {
      "path": "dist/btcpay-greenfield-node-client.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/btcpay-greenfield-node-client.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/node-fetch": "^2.5.8",
    "husky": "^5.0.9",
    "openapi-typescript-codegen": "^0.8.1",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "form-data": "^3.0.0",
    "node-fetch": "^2.6.1"
  }
}
